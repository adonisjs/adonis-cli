{
  "name": "@adonisjs/cli",
  "version": "4.0.4",
  "description": "Command line tool for Adonisjs",
  "keywords": [
    "adonis",
    "adonisjs",
    "cli",
    "installer"
  ],
  "author": "Harminder Virk <virk@adonisjs.com>",
  "contributors": [
    "Romain Lanz <romain.lanz@slynova.ch>"
  ],
  "license": "MIT",
  "main": "src/Commands/index.js",
  "bin": {
    "adonis": "index.js"
  },
  "scripts": {
    "lint": "standard",
    "pretest": "npm run lint",
    "posttest": "npm run coverage",
    "test:local": "FORCE_COLOR=true node bin/index.js --local",
    "test": "nyc npm run test:local",
    "test:win": "set FORCE_COLOR=true && node bin/index.js --win",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "@adonisjs/ace": "^5.0.0",
    "@adonisjs/ignitor": "^2.0.5",
    "adonis-await-outside": "^1.0.0",
    "cli-step": "^1.0.2",
    "debug": "^3.1.0",
    "dotenv": "^5.0.0",
    "gradient-string": "^1.0.0",
    "lodash": "^4.17.5",
    "marked": "^0.3.12",
    "nodemon": "^1.14.12",
    "opn": "^5.2.0",
    "pluralize": "^7.0.0",
    "randomstring": "^1.1.5",
    "semver": "^5.5.0"
  },
  "devDependencies": {
    "@adonisjs/fold": "^4.0.7",
    "@adonisjs/sink": "^1.0.16",
    "clear-require": "^2.0.0",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^6.0.0",
    "japa": "^1.0.6",
    "japa-cli": "^1.0.1",
    "nyc": "^12.0.1",
    "standard": "^10.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/adonis-cli.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/adonis-cli/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "bin",
      "test"
    ]
  },
  "homepage": "https://github.com/adonisjs/adonis-cli#readme",
  "directories": {
    "lib": "lib",
    "test": "test"
  }
}
